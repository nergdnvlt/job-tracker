<div class="index">
  <h2>Categories</h2>

  <button class="btn btn-default btn-sm"> <%= link_to new_category_path class: "btn btn-default add" do %>
      <span class="glyphicon glyphicon-plus-sign"></span> Add Category
    <% end %>
  </button>
  <br>
  <br>

  <% @categories.each do |category| %>

    <div class="cat-inner">
      <%= link_to edit_category_path(category), class: "btn btn-default edit" do %>
        <span class="glyphicon glyphicon-edit"></span>
      <% end %>

      <%= link_to category_path(category), method: 'delete', class: "btn btn-default delete" do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>

      <h4><%= link_to category.name, category_path(category) %></h4>

    </div><br/>
  <% end %>

</div>
