<h3>The Big Three</h3>
<% @companies.each do |company| %>
  <ul><%= link_to company.name, "/companies/#{company.id}" %></ul>
  <ul><%= company.average_interest %></ul>
<% end %>

<h3>Jobs by Interest</h3>
<% @interests.each do |interest, quantity| %>
  <%= link_to interest, "jobs?interest=#{interest}" %>: <%= quantity %><br/>
<% end %>

<br/>
<h3>Jobs By City</h3>
<% @jobs.each do |city, quantity| %>
  <%= link_to city, "/jobs?location=#{city}" %>: <%= quantity %>
<% end %>
