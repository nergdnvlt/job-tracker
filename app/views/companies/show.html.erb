All Contacts for <strong><%= @company.name %></strong>

<%= form_for [@company, @contact] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :position %>
  <%= f.text_field :position %>

  <%= f.label :email %>
  <%= f.text_field :email %>

  <%= f.submit %>

<% end %>

<ul><% @company.contacts.each do |contact| %>
  <li>Name: <%= contact.name %></li>
  <li>Email: <%= contact.email %></li>
  <li>Position: <%= contact.position %></li>
  <p><%= link_to edit_company_contact_path(contact.company, contact), class: "btn btn-default edit" do %>
      <span class="glyphicon glyphicon-edit"></span>
      <% end %>
      <%= link_to "/companies/#{contact.company.id}/contacts/#{contact.id}", method: 'delete', class: "btn btn-default delete" do %>
        <span class="glyphicon glyphicon-trash"></span>
      <% end %>
  </p>
<% end %></ul>
