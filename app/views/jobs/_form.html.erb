<%= form_for @job do |f| %>
  <%= f.label :title %><br/>
  <%= f.text_field :title %><br/>

  <%= f.label :company %></br>
  <%= f.collection_select :company_id, Company.order(:name), :id, :name %></br>

  <%= f.label :category %><br/>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %><br/>

  <%= f.label :description %><br/>
  <%= f.text_field :description %><br/>

  <%= f.label :level_of_interest %><br/>
  <%= f.number_field :level_of_interest %><br/>

  <%= f.label :city %><br/>
  <%= f.text_field :city %><br/>

  <%= f.submit %>
<% end %>
