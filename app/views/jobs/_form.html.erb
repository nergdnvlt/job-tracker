<%= form_for @job do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :company %>
  <%= f.collection_select :company_id, Company.order(:name), :id, :name %>

  <%= f.label :category %>
  <%= f.collection_select :category_id, Category.order(:name), :id, :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.submit %>
<% end %>
